//- inlide file
extends /_include/_layout
include /_include/_mixin

append variables
    //- Required
    - var pageTitle= "";
    - var pageDescription= site.description.home;
    - var pageKeywords= site.keywords;
    //- Optional
    - var pageOgpTitle= "site.name";
    - var pageOgpImage= site.ogpImage
    - var pageLang= "ja";
    - var pageOgpType= "website";
    //- Not modified
    - var pageUrl= relativePath;
    - var pageDir= './';
    - var imgDir= '/images/';


    block meta

    block link

    block script

block body
    body.p-company--offer-list
        .c-layout-full-height
            .p-company-layout
                .l-left
                    +sidebar--company
                .l-right
                    .p-company-content
                        +section-title--company('応募者一覧')
                        .w-contents
                            .w-offer-list-head
                              .l-left
                                  .w-offer-list-head-title
                                      .title {{求人タイトル}}
                              .l-right
                                  .w-offer-list-head-btn
                                      ul.c-list-flex-btn
                                          li
                                            a(href='#todo').c-button 一覧に戻る
                                          li
                                            a(href='#todo').c-button 求人を編集
                            .w-offer-list-list
                                table.b-table-offer-list-user
                                    thead
                                        tr
                                            td ステータス
                                            td 名前
                                            td メールアドレス
                                            td 応募日時
                                            td ボタン

                                    mixin table-offer-list-list
                                            td.w-name-block {{ユーザー名}}
                                            td.w-mail-block
                                                a(href='mail:#todo') {{メールアドレス}}
                                            td.w-day-block {{応募日時}}
                                            td.w-btn-block
                                                ul.c-list-flex-btn
                                                    li
                                                        a(href='#todo').c-button 詳細
                                                    li
                                                        a(href='#todo').c-button.op-alert 削除
                                    tr
                                        td.w-status-block
                                            select.c-tag
                                                option 未対応
                                                option 選考中
                                                option 不採用
                                                option 採用
                                        + table-offer-list-list
                                    tr
                                        td.w-status-block
                                            select.c-tag.op-alert
                                                option 未対応
                                                option(selected) 選考中
                                                option 不採用
                                                option 採用
                                        + table-offer-list-list

                                    tr
                                        td.w-status-block
                                            select.c-tag.op-lock
                                                option 未対応
                                                option 選考中
                                                option(selected) 不採用
                                                option 採用
                                        + table-offer-list-list

                                    - for (var i = 0; i < 7; i++)
                                        tr
                                            td.w-status-block
                                                select.c-tag.op-main
                                                    option 未対応
                                                    option 選考中
                                                    option 不採用
                                                    option(selected) 採用
                                            + table-offer-list-list
                                //.b-table-offer-list END
                            //.w-offer-list-list END
                            + global-pager

            +footer--company()

