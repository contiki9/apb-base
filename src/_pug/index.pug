        script.
            if ($(window).width() > 640) {//PCのときのみ
                //フローティングバナー
                //////////////////////////////
                var setBoxId = '#js-float-box'; // スクロールさせる要素
                var initOffsetTop = null;   // 要素の初期位置
                var closeFlag = false;//閉じるbuttonを押したかの判定
                $(document).ready(function() {
                    // 初期位置取得
                    initOffsetTop = $(setBoxId).offset().top;
                });
                //スクロールしたらこの処理が走る
                $(window).scroll(function() {
                    scrollbox();
                });
                // スクロール処理
                function scrollbox(){
                    // 初期位置が取れていなければ処理を抜ける
                    if(initOffsetTop == null) return;
                    // 現在のスクロール位置を取得
                    var scrollTop = $(document).scrollTop();
                    // スクロールさせる要素の初期位置と現在のスクロールの位置を比較
                    //初期位置より下にスクロールした時
                    if(initOffsetTop < scrollTop) {
                        // positionを設定
                        $(setBoxId).css('position', 'fixed');
                        // topの位置を設定
                        $(setBoxId).animate({top: '40'}, {duration: 0});
                    } else {
                        // 設定したスタイルを持とに戻す
                        $(setBoxId).css('position', 'absolute');
                        $(setBoxId).animate({top: initOffsetTop}, {duration: 0});
                    }


                    if (!closeFlag){//閉じるbuttonを押していない時に作動
                        if (scrollTop > 200) {
                            //scroll後表示
                            $(setBoxId).fadeIn(400);
                        } else {
                            //scroll後非表示
                            $(setBoxId).fadeOut(400);
                        }
                    }
                }
                $('.js-float-box-close').on('click',function () {
                    //閉じるbutton
                    $(setBoxId).fadeOut(400);
                    closeFlag = true;//閉じてもまた表示されないようにする
                })
            }

